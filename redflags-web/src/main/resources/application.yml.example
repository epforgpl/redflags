# -----------------------------------------------------------------------------
# APP CONFIG
# -----------------------------------------------------------------------------

redflags:
    from:                      noreply@redflags.eu
    contact:                   info@redflags.eu
    url:                       http://www.redflags.eu
    triggerSecret:             ...

site.useCaptcha:               false
#site.message:                  site.message.newDirective
site.languages:                en,hu,pl
site.facebookLanguages:        en_US,hu_HU,pl_PL


# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------

spring.main.show_banner:       false
logging:
    level:
        org:
            apache:            WARN
            hibernate:         ERROR # TRACE would show JDBC query params
            springframework:   WARN



# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------

dbhost: ...
dbname: ...
dbuser: ...
dbpass: ...

server:
    compression:
        enabled:               true
        mime-types:            text/html,text/css,application/javascript,application/json
    tomcat.uri-encoding:       UTF-8

spring:
    datasource:
        driverClassName:       com.mysql.jdbc.Driver

        url:                   jdbc:mysql://${dbhost}/${dbname}?useUnicode=true&characterEncoding=UTF-8
        username:              ${dbuser}
        password:              ${dbpass}

        # auto reconnect:
        testOnBorrow:          true
        validationQuery:       SELECT 1

    http:
        encoding:
            charset:           UTF-8
            enabled:           true
            force:             true

    jpa:
        hibernate:
            ddl-auto:          update
            dialect:           org.hibernate.dialect.MySQL5Dialect
        database:              MYSQL
        show-sql:              false

    mail:
        host:                  localhost
        port:                  25

...
